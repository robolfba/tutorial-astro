---
import BaseLayout from './BaseLayout.astro'

const { frontmatter } = Astro.props;
const {title, author, pubDate, description, image, tags} = frontmatter;
---
<BaseLayout pageTitle={title}>
    <p>Escrito por {author} el {pubDate.slice(0,10)}</p>
    <p><em>Descripci√≥n: {description}</em></p>
    <ul>
        {tags.map((tag: unknown) => <li>{tag}</li>)}
    </ul>
    <img alt={image.alt} width="300" src={image.url}/>
    <slot />
    
    <style>
        img {
            background-color: black;
        }
        ul {
            display: flex;
            list-style-type: none;
            margin-top: 0;
            padding: 0;
        }
        li {
            margin-right: 1rem;
            font-weight: bold;
        }
        li:last-child {
            margin-right: 0;
        }
    </style>
</BaseLayout>
